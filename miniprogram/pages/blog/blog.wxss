.blog-list {
  padding: 20rpx;
}

.blog-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.blog-header {
  margin-bottom: 20rpx;
}

.blog-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.blog-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.blog-body {
  display: flex;
  margin-bottom: 20rpx;
}

.blog-image {
  width: 200rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.blog-content {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.blog-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-top: 10rpx;
  border-top: 1rpx solid #eee;
}

.action-item {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.action-item text {
  font-size: 24rpx;
  color: #999;
}